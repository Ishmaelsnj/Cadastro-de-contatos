    @model UsuarioModel

@{
        ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Usuario" role="button">Cancelar exclução?</a>
<a class="btn btn-danger btn-block"  asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">Confirmar exclução?</a>